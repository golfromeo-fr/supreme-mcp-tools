# Qdrant Vector Database Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Embedding Provider (azure or local)
EMBEDDING_PROVIDER=azure

# Local Embedding Model (only if EMBEDDING_PROVIDER=local)
# Options:
#   'sbert-large' (1024d) - SBERT Large - English semantic similarity
#   'e5-large' (1024d) - Multilingual E5 Large - Multilingual semantic similarity
#   'small' (384d) - BGE Small - Fast English embeddings
#   'base' (768d) - BGE Base - Balanced English embeddings
LOCAL_EMBEDDING_MODEL=e5-large

# Azure OpenAI Embeddings Configuration (only if EMBEDDING_PROVIDER=azure)
AZURE_EMBEDDING_API_URL=https://put.your.API.gateway.ai/v1/embeddings
AZURE_EMBEDDING_MODEL=text-embedding-3-large

# API Key for Azure OpenAI (only if EMBEDDING_PROVIDER=azure)
# IMPORTANT: Replace with your actual API key
AI_API_KEY=put_your_api_key_here

# Optional: Default collection name
# DEFAULT_COLLECTION=folder.to.index-database-code
